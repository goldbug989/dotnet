@model MVCApp.Models.ViewModels.PersonListViewModel


<h1>Person List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>

    
    <tbody>
        @foreach (var p in Model.People)
        {
        <tr>
            <td>@p.PersonID</td>
            <td>@p.FirstName</td>
            <td>@p.LastName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.PersonID">Edit</a>
            </td>
            <td>
                <a asp-action="Remove" asp-route-id="@p.PersonID">Delete</a>
            </td>
        </tr>
        }

    </tbody>
</table>